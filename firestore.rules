rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to validate user profile data
    function isValidUserProfile() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'weightKg', 'heightCm', 'birthDateMillis', 'gender', 'activityLevel']) &&
             data.userId is string &&
             data.weightKg is number &&
             data.heightCm is number &&
             data.birthDateMillis is number &&
             data.gender is string &&
             data.activityLevel is string &&
             data.weightKg > 0 &&
             data.heightCm > 0 &&
             data.birthDateMillis > 0 &&
             data.userId == request.auth.uid;
    }

    // User profiles collection
    match /user_profiles/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can create their own profile with valid data
      allow create: if isOwner(userId) && isValidUserProfile();

      // Users can update their own profile with valid data
      allow update: if isOwner(userId) && isValidUserProfile();

      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }

    // Water intake v2 - Daily intake records collection
    match /intake/{userId}/records/{date} {
      // Users can read their own daily intake records
      allow read: if isOwner(userId);

      // Users can create their own daily intake records
      allow create: if isOwner(userId);

      // Users can update their own daily intake records
      allow update: if isOwner(userId);

      // Users can delete their own daily intake records
      allow delete: if isOwner(userId);
    }

    // Water intake records collection (legacy v1)
    match /water_intake/{userId}/records/{recordId} {
      // Users can read their own records
      allow read: if isOwner(userId);

      // Users can write their own records
      allow write: if isOwner(userId);
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
